{
  "name": "cloud",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest && bundlesize",
    "test-watch": "jest --watch",
    "precommit": "lint-staged",
    "clean": "rm -rf dist",
    "generate-cert": "openssl req -newkey rsa:2048 -new -nodes -x509 -days 3650 -keyout key.pem -out cert.pem",
    "start-dist": "http-server ./dist -p 8100 --gzip --ssl ",
    "report": "npm run build && open ./dist/stats/report.html",
    "build": "npm run clean && webpack -p --config webpack/prod.config.js",
    "build-dev": "npm run clean && webpack -p --config webpack/dev.config.js",
    "start": "webpack-dev-server --https --port 8100 --hot --inline --config webpack/dev.config.js"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json",
        "skipBabel": true
      }
    },
    "roots": [
      "src"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.tsx"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "collectCoverageFrom": [
      "src/pages/**"
    ],
    "setupFiles": [
      "<rootDir>/src/base/tests/setup.js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverage": false,
    "moduleNameMapper": {
      "^react-sps[/](.+)": "<rootDir>/src/lib/react-sps/$1"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "fontfaceobserver": "^2.0.13",
    "lodash": "^4.17.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-grid-system": "^3.0.6",
    "react-loadable": "^5.2.2",
    "react-router-dom": "^4.2.2",
    "react-with-async-fonts": "^3.0.3",
    "sanitize.css": "^5.0.0",
    "styled-components": "^2.2.1"
  },
  "lint-staged": {
    "gitDir": "../",
    "linters": {
      "*.test.tsx": [
        "jest"
      ],
      "*.ts": [
        "tsc --noEmit --skipLibCheck --allowSyntheticDefaultImports"
      ],
      "*.tsx": [
        "tsc --jsx react --noEmit --skipLibCheck --allowSyntheticDefaultImports --lib es2015,es2016"
      ],
      "*.{js,tsx,ts}": [
        "prettier --single-quote --trailing-comma es5 --write",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "compression-webpack-plugin": "^1.0.1",
    "@types/fontfaceobserver": "0.0.5",
    "@types/react-loadable": "^4.0.4",
    "@types/enzyme": "^2.8.8",
    "@types/jest": "^21.1.1",
    "@types/react": "^16.0.6",
    "@types/react-dom": "^16.0.1",
    "@types/react-router": "^4.0.15",
    "@types/react-router-dom": "^4.0.7",
    "awesome-typescript-loader": "^3.2.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^21.0.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.1.0",
    "babel-plugin-import-inspector": "^2.0.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "bundlesize": "^0.14.4",
    "enzyme": "^3.0.0-beta.7",
    "enzyme-adapter-react-16": "^1.0.0",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "import-inspector": "^2.0.0",
    "jest": "^21.1.0",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.0",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-test-renderer": "^16.0.0",
    "source-map-loader": "^0.2.1",
    "ts-jest": "^21.0.1",
    "typescript": "^2.5.2",
    "typescript-plugin-lodash": "^0.1.0",
    "typescript-plugin-styled-components": "0.0.4",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.6.0",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.8.2"
  },
  "bundlesize": [
    {
      "path": "./dist/vendor.*.js",
      "maxSize": "65 kb"
    },
    {
      "path": "./dist/used-twice-*.js",
      "maxSize": "10 kb"
    },
    {
      "path": "./dist/main.*.js",
      "maxSize": "10 kB"
    },
    {
      "path": "./dist/pages.*.js",
      "maxSize": "10 kB"
    },
    {
      "path": "./dist/manifest.*.js",
      "maxSize": "2 kb"
    },
    {
      "path": "./dist/index.html",
      "maxSize": "2 kb"
    }
  ]
}
