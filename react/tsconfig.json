{
  "compilerOptions": {
    "baseUrl": ".",
    // Relative to "baseUrl"
    "paths": {
      "react-sps": ["./src/lib/react-sps"],
      "react-sps/*": ["./src/lib/react-sps/*"]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext",
      "dom.iterable",
      "scripthost"
    ],
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"]
}
